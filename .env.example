# ============================================
# DEBATE ARENA - Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# Database URL (MySQL - REQUIRED)
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://debate_user:Rishu@2004@localhost:3306/debate_arena

# Server Port
PORT=3000

# JWT/Session Secret (generate a random 64-character hex string)
# You can generate one with: openssl rand -hex 32
JWT_SECRET=your-random-64-character-hex-secret-here

# ============================================
# Authentication (for development, use local auth)
# ============================================
# Set to 'local' for local development bypass authentication
AUTH_MODE=local

# OAuth Configuration (only needed if AUTH_MODE is not 'local')
OAUTH_SERVER_URL=http://localhost:3000
VITE_OAUTH_PORTAL_URL=http://localhost:3000
VITE_APP_ID=debate-arena-local

# ============================================
# AI/LLM Features (OPTIONAL - for AI-generated topics)
# Uses the built-in Forge API proxy
# ============================================
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# ============================================
# Google Maps (OPTIONAL - for map features)
# Also uses Forge API proxy, no direct Google API key needed
# ============================================

# ============================================
# Vite Configuration
# ============================================
REPLIT_DOMAINS=localhost
REPL_HOME=/Users/rishi/Desktop/Manus/GitHub/manushackathon

# ============================================
# Analytics (OPTIONAL)
# ============================================
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=
